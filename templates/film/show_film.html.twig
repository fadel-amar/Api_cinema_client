{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em 30px;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">



        <h1 style="margin-bottom: 50px">Détail du Film </h1>

            <div>
                <h2>Titre : {{ film.titre }}</h2>
                <div>Id : {{ film.id }}</div>


                <div>Durée : {{ film.duree | format_datetime(pattern='HH:mm')}}</div>
            </div>
            <br>

        <h2>Séances prévues</h2>

        {% for seance in film.seances|sort %}
            <div>
                {{ seance.dateProjection |format_datetime(pattern='dd/MM/y HH:mm') }}
            </div>

        {% endfor %}

        <a class ="btn btn-secondary mt-5" href="./">Retour</a>







    </div>
{% endblock %}
