{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">



        <h1 style="margin-bottom: 50px">Voici la liste des films à l'affiche</h1>

            <div>
                <h2>Titre : {{ film.titre }}</h2>
                <div>Id : {{ film.id }}</div>
                <div>Durée : {{ film.duree }}</div>
            </div>
            <br>

        <h2>Séances prévues</h2>
        {% for seance in film.seances %}
            <div>
                {{ seance.dateProjection |format_datetime(pattern='dd/MM/y HH:mm') }}
            </div>

        {% endfor %}







    </div>
{% endblock %}
