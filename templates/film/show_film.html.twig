{% extends 'base.html.twig' %}

{% block title %}FILMS{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Détail du Film</h1>

        <style>
            .btn {
                margin-left: 10px;
            }

            .container {
                max-width: 800px;
                margin: 0 auto;
                padding: 0 16px;
            }

            img {
                width: 100%;
            }

            .card {
                background: #889bb7;
                display: grid;
                grid-template-columns: 50% 50%;
                border: none;
                box-shadow: 0 4px 6px rgba(32, 148, 190, 0.1);
                border-radius: 4px;
                overflow: hidden;
            }

            .card-title {
                font-size: 2rem;
                color: #5c22ff;
            }

            .card-text {
                font-size: 1.2rem;
                color: #666;
            }

            h2 {
                font-size: 2rem;
                font-weight: 700;
                color: #2db7d0;
                margin-top: 40px;
                margin-bottom: 20px;
            }

            ul.list-group {
                margin: 0;
                padding: 0;
                list-style: none;
            }

            li.list-group-item {
                padding: 12px 16px;
                background-color: #80b8d9;
                border-bottom: 1px solid #eee;
                font-size: 1.2rem;
                color: #333;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            li.list-group-item:hover {
                background-color: #f5f5f5;
            }
        </style>

        <div class="card mt-4 ">
            <div class="card-body">
                <h2 class="card-title">{{ film.titre }}</h2>
                <p class="card-text">Durée : {{ film.duree | format_datetime(pattern='HH:mm:ss') }}</p>
            </div>
            <div class="photo">
                <img src="{{ asset('/images/Popcorn.png') }}" alt=''>
            </div>
        </div>

        <h2 class="mt-5">Séances prévues</h2>

        <ul class="list-group mt-4">
            {% for seance in film.seances | sort %}

                {% set seanceDate = seance.dateProjection | date('Y-m-d H:i:s') %}
                {% set currentDate = "now" | date('Y-m-d H:i:s') %}

                <li class="list-group-item">
                    {{ seance.dateProjection |format_datetime(pattern='dd/MM/y HH:mm:ss') }}
                        {% if seanceDate >= currentDate %}
                        <a class="btn btn-primary" href="/reservations/{{ seance.id }}">Réserver</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
