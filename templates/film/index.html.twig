{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">



        <h1 style="margin-bottom: 50px">Voici la liste des films à l'affiche</h1>
        
        {% for film in films %}
            <div>
                <h2>Titre : {{ film.titre }}</h2>
                <div>Id : {{ film.id }}</div>

{#                {% set duration = film.duree | date("format", app.user.timezone, "%Hh %Im") %}#}

                <div>Durée : {{ film.duree }}</div>
               <a class="btn btn-primary" href="http://127.0.0.1:8001/films/{{ film.id }}">Voir plus</a>
            </div>
            <br>

        {% endfor %}



    </div>
{% endblock %}
